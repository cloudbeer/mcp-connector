# 数据库配置
DATABASE_URL=postgresql://username:password@localhost:5432/mcp_connector
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=mcp_connector
DATABASE_USER=username
DATABASE_PASSWORD=password

# Strands Model Provider 配置
# 支持的提供商: openai, anthropic, bedrock, gemini
MODEL_PROVIDER=openai
MODEL_NAME=gpt-4

# OpenAI 配置
OPENAI_API_KEY=your_openai_api_key
OPENAI_BASE_URL=https://api.openai.com/v1

# Anthropic 配置
ANTHROPIC_API_KEY=your_anthropic_api_key

# AWS Bedrock 配置
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Google Gemini 配置
GOOGLE_API_KEY=your_google_api_key

# 应用配置
APP_HOST=0.0.0.0
APP_PORT=8000
APP_DEBUG=true
APP_LOG_LEVEL=INFO

# 服务器分组配置
SERVER_GROUP=default

# 向量化配置
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSION=1536

# 工具配置
TOOL_TIMEOUT=30
TOOL_RETRY_COUNT=3
TOOL_RETRY_DELAY=5

# 助手配置
MAX_RECALLED_TOOLS=5
INTENT_EXTRACTION_MODEL=gpt-4o-mini


# Set the model provider
MODEL_PROVIDER=openai  # or anthropic or bedrock
MODEL_NAME=gpt-4  # or claude-sonnet-4-20250514 or us.amazon.nova-premier-v1:0

# Provider-specific configuration
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
